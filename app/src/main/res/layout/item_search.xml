<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    android:layout_height="100dp">

    <ImageView        android:id="@+id/iv_itemimg_search"
        android:layout_width="100dp"
        android:layout_height="match_parent"

        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
         />

    <TextView        android:id="@+id/tv_itemname_search"
        android:layout_width="wrap_content"
        android:layout_height="60dp"

        android:textSize="17sp"
        android:textColor="#000"

        android:layout_toRightOf="@id/iv_itemimg_search"
        />

    <TextView        android:id="@+id/tv_price_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/tv_itemname_search"
        android:layout_toRightOf="@id/iv_itemimg_search"
        android:layout_alignParentBottom="true"

        android:textColor="#000"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_shopname_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tv_price_search"
        android:layout_below="@id/tv_itemname_search"
        android:gravity="right"

        />

</RelativeLayout>