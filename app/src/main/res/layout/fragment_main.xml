<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/list_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0fff"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="@string/list_add_desc" />
        <EditText
            android:id="@+id/search_box"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:autofillHints=""
            android:gravity="center"
            android:hint="@string/add_or_search_hint"
            android:inputType="text"/>
        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#0fff"
            android:src="@android:drawable/ic_search_category_default"
            android:contentDescription="@string/btn_search_desc"
            android:layout_weight="1"   />

    </LinearLayout>

    <ListView
        android:id="@+id/checklist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <!--<TextView
        android:id="@+id/checklist_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_checklist_empty"/>
-->
    <ListView
        android:id="@+id/daily_recom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>

</LinearLayout>